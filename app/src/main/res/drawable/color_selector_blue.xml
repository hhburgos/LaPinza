<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="3" android:useLevel="false">
            <solid android:color="@android:color/holo_blue_dark" />
        </shape>
        <bitmap android:src="@drawable/ic_cart_black" android:gravity="center"/>
    </item>
    <item android:state_pressed="true">
        <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="3" android:useLevel="false">
            <solid android:color="@android:color/holo_blue_dark" />
        </shape>
        <bitmap android:src="@drawable/ic_cart_black"/>
    </item>
    <item android:state_checked="true">
        <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="3" android:useLevel="false">
            <solid android:color="#800099cc" />

        </shape>
    </item>
    <item>
        <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="3" android:useLevel="false">
            <solid android:color="@android:color/holo_blue_dark" />
        </shape>
        <bitmap android:src="@drawable/ic_cart_black"/>
    </item>
</selector>