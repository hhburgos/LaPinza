<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_up"
    android:fitsSystemWindows="false">

    <include
        layout="@layout/toolbar_light_arrow"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/_22sdp" />

    <LinearLayout
        android:id="@+id/llLoginForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            android:backgroundTint="#e82e5f"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_10sdp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_logo_white" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/enter_the_code_nto_verify_your_phone"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/we_have_sent_an_verification_code_to_the_phone_number_977984123456"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/etCode1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorWhite"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textSize="32sp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/etCode2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorWhite"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textSize="32sp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/etCode3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:textSize="32sp"
                android:backgroundTint="@color/colorWhite"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/etCode4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorWhite"
                android:importantForAutofill="no"
                android:textSize="32sp"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="4dp"
            app:cardCornerRadius="@dimen/_20sdp">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTheme"
                android:letterSpacing=".1"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/send_a_new_code"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</RelativeLayout>