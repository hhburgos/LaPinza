<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@drawable/sign_in_up"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_light_arrow"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/_22sdp" />

    <LinearLayout
        android:id="@+id/llLoginForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            android:backgroundTint="#e82e5f"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_10sdp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_logo_white" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/change_password"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/you_can_only_change_password_only_once_a_month_do_protect_your_password_wisely"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBlack"
            app:passwordToggleEnabled="true"
            app:boxBackgroundMode="filled"
            app:passwordToggleTint="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            app:hintTextColor="@color/colorWhite">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="@color/colorWhite"
                android:hint="@string/current_password"
                android:importantForAutofill="no"
                android:drawableStart="@drawable/ic_passwords"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorWhite"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                tools:ignore="UnusedAttribute" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBlack"
            app:passwordToggleEnabled="true"
            app:boxBackgroundMode="filled"
            app:passwordToggleTint="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            app:hintTextColor="@color/colorWhite">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="@color/colorWhite"
                android:hint="@string/new_password"
                android:importantForAutofill="no"
                android:drawableStart="@drawable/ic_passwords"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorWhite"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                tools:ignore="UnusedAttribute" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBlack"
            app:passwordToggleEnabled="true"
            app:boxBackgroundMode="filled"
            app:passwordToggleTint="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            app:hintTextColor="@color/colorWhite">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="@color/colorWhite"
                android:hint="@string/confirm_password"
                android:importantForAutofill="no"
                android:drawableStart="@drawable/ic_passwords"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorWhite"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                tools:ignore="UnusedAttribute" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="4dp"
            app:cardCornerRadius="@dimen/_20sdp">

            <Button
                android:id="@+id/btnPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTheme"
                android:letterSpacing=".1"
                android:text="@string/confirm_password"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>