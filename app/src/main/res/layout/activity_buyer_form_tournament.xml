<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@drawable/background_gradient">

        <!-- Title -->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_form_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:src="@drawable/background_wave" />

            <!-- Title -->
            <LinearLayout
                android:id="@+id/llTtileFormOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/tournament_title_form"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <include layout="@layout/toolbar" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                app:hintTextColor="@color/colorBlack">

                <EditText
                    android:id="@+id/etNameTournament"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:backgroundTint="@color/colorBlack"
                    android:hint="@string/tournament_name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:theme="@style/SendToBankEditText"
                app:hintTextColor="@color/colorBlack">

                <EditText
                    android:id="@+id/etFormatTournament"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:backgroundTint="@color/colorBlack"
                    android:hint="@string/tournament_format"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:paddingBottom="@dimen/_10sdp"

                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/llParticipants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:background="@drawable/corner_black">
                <TextView
                    android:id="@+id/tvMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="@string/tournament_participants"
                    android:textColor="@color/colorBlack"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_search_person" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llJudge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:background="@drawable/corner_black">
                <TextView
                    android:id="@+id/tvMemberJudge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="@string/tournament_judges"
                    android:textColor="@color/colorBlack"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_search_person" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSpeakers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:background="@drawable/corner_black">
                <TextView
                    android:id="@+id/tvMemberSpeakers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="@string/tournament_speakers"
                    android:textColor="@color/colorBlack"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_search_person" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:theme="@style/SendToBankEditText"
                app:hintTextColor="@color/colorBlack">

                <EditText
                    android:id="@+id/etLocationTournament"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:backgroundTint="@color/colorBlack"
                    android:hint="@string/tournament_location"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingBottom="@dimen/_10sdp"

                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:theme="@style/SendToBankEditText"
                app:hintTextColor="@color/colorBlack">

                <EditText
                    android:id="@+id/etDayTournament"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:backgroundTint="@color/colorBlack"
                    android:hint="@string/tournament_day"
                    android:importantForAutofill="no"
                    android:inputType="datetime"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:theme="@style/SendToBankEditText"
                app:hintTextColor="@color/colorBlack">

                <AutoCompleteTextView
                    android:id="@+id/acOrganization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/tournament_organization"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    android:completionThreshold="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnCreateTournament"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_64sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_64sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/button_background_dark"
                android:text="@string/tournament_create_btn"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>